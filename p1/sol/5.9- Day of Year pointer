/* day_of_year: определяет день года по месяцу и дню */

int day_of_year(int year, int month, int day){
    int i, leap;

    if (month > 12)
        return -1;

    leap = (year%4 == 0 && year%100 != 0) || year % 400 == 0;
    if ( *(daytab[leap] + month) < day)
        return -1;

    ++daytab[leap];
    for (i = 1; i < month; daytab[leap]++, i++)
    	day += *daytab[leap];

    return day;
}


