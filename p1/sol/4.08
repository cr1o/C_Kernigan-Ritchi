/* push: положить значение f в стек */
void push(double f)
{
	if (sp < MAXVAL)
		val[sp++] = f;
	else
		printf( "Error: Stack full, %g does not fit\n", f);
}
/* pop: взять с вершины стека и выдать в качестве результата */
double pop(void)
{
	if (sp > 0)
		return val[--sp];
	else {
		printf( "Error: stack is empty\n");
		return 0.0;
	}
}
//Clear stack
void clstack (void){
	sp = 0;
}

//Modified pop.
double popm(void)
{
	if (sp > 0)
		return val[sp - 1];
	else {
		printf( "Error: stack is empty\n");
		return 0.0;
	}
}
