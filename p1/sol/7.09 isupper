//Упражнение 7.9. Реализуя функции вроде isupper, можно экономить либо память, либо время. Напишите
//оба варианта функции.

#include <stdio.h>
#define isupp(x) ((x >= 'A') && (x <= 'Z'))

int isup(char );

int main(){
	//char a = 'a';
	printf("is up %d\n", isupp('a'));
	printf("is up %d\n", isupp('Z'));

	printf("is up %d\n", isup('a'));
	printf("is up %d\n", isup('Z'));

	getchar();
}

int isup(char c){
	return ( (c >= 'A') && (c <= 'Z'));
}
