int strncmp2(char *s, char *t, int n){

	while ( (n-- > 0) && (*s != '\0') ){
		if (*s > *t)
			return 1;
		else if (*s < *t)
			return -1;
		s++;
		t++;
	}
	return 0;
}


void strncpy2(char *s, char *t, int n){

	while ( (*t != 0) && (n-- > 0 )) {
		*s = *t;
		s++;
		t++;
	}

}


void strncat2(char *s1, char *s2, int n){
